"
" Maps
"

let mapleader = ','
let g:mapleader = ','

map <leader>w :w!<cr>       " ‚îê Fast write, quit, refresh
map <leader>q :q<cr>        " ‚îò

" IntelliJ IDEA / IdeaVim Actions
map <leader>f :action GotoFile<cr>
map <leader>n :action ActivateProjectToolWindow<cr>
map <leader>l :action ActivateLogcatToolWindow<cr>

map <leader>r :action Run<cr>
map <leader>d :action Debug<cr>

" Edit
map <leader>c :action CommentByLineComment<cr>
nmap <unique> <leader>p :action ReformatCode<cr>

"
" üñ§
"

set visualbell              " ‚îê Desactivar sonidos
set noerrorbells            " ‚îò

set clipboard+=unnamedplus  " Compartir el portapales del sistema

" Plugins
set surround
