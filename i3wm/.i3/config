# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status --config ~/.i3/scripts/i3status.conf
        position top

        colors {
                background #000000
                statusline #00b300
                separator  #000000

#                                       border  fondo   texto
                focused_workspace       #000000 #000000 #00b300
                active_workspace        #000000 #000000 #00b300
                inactive_workspace      #000000 #000000 #333333
                urgent_workspace        #00b300 #000000 #00b300

                }


        #workspace_buttons no
}


