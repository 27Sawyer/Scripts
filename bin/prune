#!/bin/bash

function prune() {
  echo "deleting: $1"
  rm -rf $1
}

# Command history
prune ~/.node_repl_history
prune ~/.python_history
prune ~/.zsh_history

# Cache
prune ~/.cache
prune ~/.standard-cache
prune ~/.xo-cache
prune ~/.pkg-cache

# Others
prune ~/.NERDTreeBookmarks
prune ~/.thumbnails
prune ~/.hashcat
prune ~/.local/share/RecentDocuments
prune ~/.sqlmap/output

# jd
prune ~/.jd/logs

# Config
prune ~/.config/autostart
prune ~/.config/cef_user_data
prune ~/.config/gpick
prune ~/.config/obs-studio

# Slack
prune ~/.config/Slack/Cache/*
prune ~/.config/Slack/GPUCache/*
prune ~/.config/Slack/logs/*

# SSH known host
prune ~/.ssh/known_hosts
prune ~/.ssh/known_hosts.old

# Trash
prune ~/.local/share/Trash/*

# System
sudo rm /var/log/journal/* -rf
sudo rm /var/log/mongodb/* -rf
sudo rm /var/cache/pacman/pkg/* -rf
